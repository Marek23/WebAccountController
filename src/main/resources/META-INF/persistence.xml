<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
        http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="bank">
		<properties>
			<!-- Connection settings -->
			<property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
			<property name="hibernate.connection.url"          value="jdbc:postgresql://localhost:5432/bank"/>
			<property name="hibernate.connection.username"     value="USER_HERE"/>
			<property name="hibernate.connection.password"     value="PASS_HERE"/>
	
			<!-- SQL dialect -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
	
			<!-- Print executed SQL to stdout -->
			<property name="hibernate.show_sql" value ="true"/>
	
			<!-- Update database on startup -->
			<property name="hibernate.hbm2ddl.auto" value="update"/>

		</properties>
	</persistence-unit>
</persistence>